@using Blog.DAL
@model List<Kategoriler>
@{
    /**/

    ViewBag.Title = "TumKategorileriListele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>TumKategorileriListele</h2>

<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Aktif Başlıklar</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 10%">
                            Kategori ID
                        </th>
                        <th style="width: 15%">
                            Kategori Adı
                        </th>
                        <th style="width: 30%">
                            Kategori Açıklama
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var allkategori in Model)
                    {

                        <tr>
                            <td>
                                <a>
                                    @allkategori.KategoriID
                                </a>

                            </td>
                            <td>
                                <a>
                                    @allkategori.KategoriAdi
                                </a>
                            </td>
                            <td>
                                <a>
                                    @allkategori.KategoriAciklama
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <a href="/Admin/YeniKategoriEkle" class="btn btn-primary">Yeni Kategori Ekle</a>
    <!-- /.card -->
</section>